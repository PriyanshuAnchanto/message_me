<div class="ui small inverted menu">
  <div class="ui container">
    <%= link_to 'Chatroom', root_path, class: "item" %>
    <a class="item">
      Messages
    </a>
    <div class="right menu">
      <% if logged_in? %>
        <div class="item">
          <strong><%= current_user.username %></strong>
        </div>
        <div class="item">
          <%= link_to 'Log Out',logout_path,method: :delete, class: "ui teal button" %>
        </div>
      <%else%>
        <div class="item">
          <%= link_to 'Log In',login_path, class: "ui teal button" %>
        </div>
        <div class="item">
          <div class="ui teal button">Sign Up</div>
        </div>
      <%end%>
      
    </div>
  </div>
</div>