<h3 class="ui center aligned icon header">
  <i class="circular teal comments icon"></i>
  Have a chat!
</h3> 

<div class="ui container grid">
  <div class="twelve wide column">
    <div class= "ui fluid raised card chatbox">
      <div class="content ">
        <div class="ui feed">
          <h4 class="ui header">Chat Room</h4>
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, local: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
                <%= f.text_field :body, placeholder: "Enter a message..." %>
                <%= f.button 'send',class: "teal button" %>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class= "ui fluid raised card chatbox">
      <div class="content ">
        <div class="ui vertical menu">
          <a class="teal item">
            Inbox
            <div class="ui teal left pointing label">1</div>
          </a>
          <a class="item">
            Friends
            <div class="ui label">51</div>
          </a>
          <a class="item">
            Updates
            <div class="ui label">1</div>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>