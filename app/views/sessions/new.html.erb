<div class="ui container">
  <h3 class="ui center aligned icon header">
    <p>Welcome to Message Me</p>
    <i class="circular teal power icon"></i>
    <p>Log in to continue </p>
  </h3> 
  
  <div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
      <div class="column">
        <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path, local: true) do |f| %>
         
          <div class = "field">
            <%= f.label :username %>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "Username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password %>
            <div class="ui left icon input">
              <%= f.password_field :password, placeholder: "Password"  %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.submit "Login", class: "ui teal submit button" %>
          
        
        <%end%>
      </div>
      <div class="middle aligned column">
        <div class="ui teal big button">
          <i class="signup icon"></i>
          Sign Up
        </div>
      </div>
    </div>
    <div class="ui vertical divider">
      Or
    </div>
  </div>
</div>
